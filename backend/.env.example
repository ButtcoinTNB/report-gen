# Example environment variables for the backend
# Copy this file to .env for local development
# For production, set these variables in your hosting platform (Render/Heroku)

# Supabase configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-key
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# API Keys
OPENROUTER_API_KEY=your-openrouter-api-key

# File storage settings
UPLOAD_DIR=./uploads
GENERATED_REPORTS_DIR=./generated_reports
MAX_UPLOAD_SIZE=1073741824  # 1GB

# Data retention settings
DATA_RETENTION_HOURS=2  # How long to keep files before auto-deletion (in hours)

# API settings
API_RATE_LIMIT=100

# LLM settings
DEFAULT_MODEL=google/gemini-2.0-pro-exp-02-05:free
MAX_TOKENS=16000

# CORS settings - Frontend URL for CORS (for production)
# Use http://localhost:3000 for local development
# Use your Vercel URL for production
# For multiple origins, use comma-separated list:
# FRONTEND_URL=http://localhost:3000,https://report-gen-liard.vercel.app
FRONTEND_URL=http://localhost:3000 